<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form class="form-proyecto">
                <h4 style="padding:0; border-bottom:1px solid #000;">Formulario de proyectos</h4>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="prefijo">Prefijo:</label>
                        <input type="text" class="form-control input-sm" name="prefijo" id="prefijo" value="{{prefijo}}" />
                    </div>
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control input-sm" name="nombre" id="nombre" value="{{nombre}}" />
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Descripci√≥n:</label>
                        <textarea class="form-control input-sm" name="descripcion" id="descripcion" rows="10">{{descripcion}}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="responsable">Responsable:</label>
                        <select class="form-control input-sm" name="responsable" id="responsable" >
                            <option value="-1">Selecciona un responsable</option>
                        </select>

                        <label for="estado">Estado:</label>
                        <select class="form-control input-sm" name="estado" id="estado" >
                            <option value="-1">Selecciona un estado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button id="btnGuardar" class="btn btn-lg btn-primary btn-block col-md-2" type="button">Guardar</button>
                        <button id="btnCancelar" class="btn btn-lg btn-primary btn-block col-md-2" type="button">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>